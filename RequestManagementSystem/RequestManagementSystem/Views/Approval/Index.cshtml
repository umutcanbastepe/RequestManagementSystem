@model List<RequestManagementSystem.Models.ViewModels.ApprovalItemVM>
@{
    ViewData["Title"] = "Onay Bekleyen Talepler";
}
<h2>Onay Bekleyen Talepler</h2>
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (Model == null || !Model.Any())
{
    <p class="text-muted">Onay bekleyen talep bulunmuyor.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Talep No</th>
                <th>Başlık</th>
                <th>Tür</th>
                <th>Öncelik</th>
                <th>Oluşturan</th>
                <th>Tarih</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.RequestNo</td>
                    <td>@item.Title</td>
                    <td>@item.Type</td>
                    <td>@item.Priority</td>
                    <td>@item.CreatedByFullName</td>
                    <td>@item.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        <a asp-controller="Request" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detay</a>
                        <form asp-action="Approve" asp-route-id="@item.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-success">Onayla</button>
                        </form>
                        <a asp-action="Reject" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Reddet</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
